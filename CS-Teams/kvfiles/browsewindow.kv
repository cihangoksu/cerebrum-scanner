<BrowseWindow>:
    name: 'browseScreen'
    id: id_BrowseWindow

    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            size_hint_y: 10
            md_bg_color: "white"

        
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: 10
            md_bg_color: "black"
            MDBoxLayout:
                size_hint_y: 50
                MDLabel:
                    text: "Name Surname (36y/m)"
                    halign: "center"
                    valign: "center"
                    bold: True
                    font_style: "H6"

            MDBoxLayout:
                size_hint_y: 50
                MDLabel:
                    text: "Onset: 96min, MRS: 3, NIHSS: 5"
                    halign: "center"
                    valign: "center"
                    bold: True
                    font_style: "H6"

        MDBoxLayout:
            size_hint_y: 5
            md_bg_color: "red"

        MDBoxLayout:
            size_hint_y: 5
            md_bg_color: "white"

        MDBoxLayout:
            size_hint_y: 60
            md_bg_color: "black"

        MDBoxLayout:
            size_hint_y: 10
            md_bg_color: "white"


    MDFloatLayout:
        Image:
            id: id_cerebrumscanner_logo
            source: f'{root.assets_path}/images/PNG/CS-LOGO-WHITE.png'
            # size_hint: None, None
            size_hint: 0.6, 0.08
            pos_hint: {"left":0.1 , 'center_y':0.95}
            keep_ratio: True

        MDRaisedButton:
            id: id_ChooseAnotherFileButton
            text: "choose CT"
            pos_hint: {"right": 0.9, "center_y": 0.95}


        MDIconButton:
            id: id_previous_nifti
            pos_hint: {"x": 0.05, "center_y": 0.775}
            size_hint: None, 0.04
            size: self.size[1], self.size[1] 
            icon: "chevron-left-circle"
            theme_text_color: 'Custom'  # Set the text color to custom
            text_color: "black"
            on_release: root.Callback_get_previous_scan()

        MDIconButton:
            id: id_next_nifti
            pos_hint: {"right": 0.95, "center_y": 0.775}
            size_hint: None, 0.04
            size: self.size[1], self.size[1] 
            icon: "chevron-right-circle"
            theme_text_color: 'Custom'  # Set the text color to custom
            text_color: "black"
            on_release: root.Callback_get_next_scan()




